<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block name="header.nav" template="Magento_Theme::header_nav.phtml" before="-"/>
            <referenceBlock name="logo">
                <arguments>
                    <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                    <argument name="logo_img_width" xsi:type="number">273</argument>
                    <argument name="logo_img_height" xsi:type="number">50</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
        <referenceContainer name="header-wrapper">
            <block name="header.nav" template="Magento_Theme::header_nav.phtml" after="logo"/>
            <block name="header.cart_phone" template="Magento_Theme::phone_cart.phtml" after="top.search"/>
        </referenceContainer>

        <referenceContainer name="header.panel" remove="true"/>
        <referenceContainer name="showcart.wrapper" remove="true"/>
        <referenceContainer name="page.top" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
    </body>
</page>
